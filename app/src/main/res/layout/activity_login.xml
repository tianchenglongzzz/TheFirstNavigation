<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.login.activity.LoginActivity">
    <TextView
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_weight="6.6"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_ESC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/esc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="欢迎登陆第一通航"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/login_ed_phone"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="#fff"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:digits="qwertyuiopasdfghjklzxcvbnm1234567890QWERTYUIOPASDFGHJKLZXCVBNM"
                android:id="@+id/login_ed_vcode"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="#fff"
                android:hint="请输验证码"
                android:maxLength="4" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/login_tv_vcode"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="#fff"
                android:gravity="center"
                android:saveEnabled="false"
                android:text="获取验证码" />
        </LinearLayout>

        <TextView
            android:layout_width="300dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="未注册手机验证后自动登陆" />

        <ImageView
            android:id="@+id/login_btn_enter"
            android:layout_width="300dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@mipmap/dengdeng"
            android:text="登陆"
            android:textColor="#fff"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <CheckBox
                android:id="@+id/login_check_pact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:checked="true"
                android:text="我已经并同意"
                android:textColor="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="“用户协议”"
                android:textColor="@color/blue" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#a6a0a0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="第三方账号快速登陆"
                android:textColor="#3885af" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:background="#969292" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <ImageView
                    android:id="@+id/login_btn_qq"
                    android:layout_marginRight="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/qq" />
                <ImageView
                    android:id="@+id/login_btn_weixin"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/wechat" />
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/login_btn_xinlang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/weibo" />



        </LinearLayout>

    </LinearLayout>




</LinearLayout>