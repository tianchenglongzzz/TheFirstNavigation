<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.main.activitys.MainActivity">

    <android.support.v7.widget.Toolbar
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/main_toobar"
        android:background="@color/read"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:src="@drawable/skip_top "
                />

        </FrameLayout>

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/toobar_search"
            android:layout_gravity="right"
            android:background="@mipmap/news_search"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />
    </android.support.v7.widget.Toolbar>
   <android.support.v4.view.ViewPager
       android:id="@+id/man_vp"
       android:layout_width="match_parent"
       android:layout_height="0dp"
        android:layout_weight="9"
       ></android.support.v4.view.ViewPager>
  <android.support.design.widget.TabLayout
      app:tabSelectedTextColor="@color/read"
      app:tabIndicatorHeight="0dp"
      android:id="@+id/man_tab"
      android:layout_weight="1"
      android:layout_width="match_parent"
      android:layout_height="0dp"></android.support.design.widget.TabLayout>

</LinearLayout>