<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.news.activity.AddActivity">
    <android.support.v7.widget.Toolbar
        android:background="@color/read"
        android:id="@+id/add_toobar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<TextView
    android:textColor="#fff"
    android:textSize="@dimen/sp_20"
    android:text="我的频道"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_margin="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/gray"
            android:text="长按可拖动排序"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/rb_editor"
            android:button="@null"
            android:textColor="@color/read"
            android:gravity="center"
            android:text="设置"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_shape"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_re"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/gray"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_1" />
    <TextView
        android:layout_marginTop="@dimen/dp_0_5"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/black"
        android:text="频道推荐"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="@dimen/dp_10"
        android:text="点击添加频道"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/delect_re"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>