<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:id="@+id/tv_one_tiile_three"
        android:textColor="@color/black"
        android:text="我是标题我牛皮"
        android:textSize="@dimen/sp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sim_news_imageListThumb_three_three"
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_80" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/sim_news_imageListThumb_tow_tow"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_80" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/sim_news_imageListThumb_three"
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_80" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_news_origin_three"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>